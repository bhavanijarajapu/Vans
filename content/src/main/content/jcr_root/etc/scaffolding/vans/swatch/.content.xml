<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:targetPath="/etc/commerce/products/vans/swatches"
        jcr:description="This form is used to store Swatches Data for VANS"
        jcr:primaryType="cq:PageContent"
        jcr:title="Swatches"
        sling:resourceType="wcm/scaffolding/components/scaffolding">
        <cq:dialog
            jcr:primaryType="nt:unstructured"
            jcr:title="Vans Swatches"
            sling:resourceType="cq/gui/components/authoring/dialog">
            <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
            <content
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        class="cq-dialog-dropdown-showhide-basic"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                            type="nav"/>
                        <items jcr:primaryType="nt:unstructured">
                            <basic
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Basic Information"
                                sling:resourceType="granite/ui/components/foundation/section">
                                <items jcr:primaryType="nt:unstructured">
                                    <column-set
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                            margin="false"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <col1
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">


                                                    <swatchName
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldLabel="Swatch Name *"
                                                            name="./swatchName"
                                                            renderReadOnly="{Boolean}true"
                                                            required="{Boolean}true"
                                                            validation="vans.swatchName"/>
                                                    <swatchType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/dropdown"
                                                            class="cq-dialog-dropdown-showhide"
                                                            fieldLabel="Swatch Type *"
                                                            name="./swatchType"
                                                            renderReadOnly="{Boolean}true"
                                                            required="{Boolean}true">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <solid
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Solid"
                                                                        value="solid"/>
                                                                <material
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Material"
                                                                        value="material"/>
                                                                <pattern
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Pattern"
                                                                        value="pattern"/>
                                                            </items>
                                                    </swatchType>
                                                    <addedCost
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                                            name="./addedCost"
                                                            fieldLabel="Added Cost"
                                                            renderReadOnly="{Boolean}true"/>

                                                    <publishDate
                                                            displayedFormat="MMMM DD, YYYY hh:mm a"
                                                            fieldLabel="Publish Date"
                                                            name="./publishDate"
                                                            jcr:primaryType="nt:unstructured"
                                                            renderReadOnly="{Boolean}true"
                                                            sling:resourceType="granite/ui/components/foundation/form/datepicker"
                                                            type="datetime" />
                                                    <endDate
                                                            displayedFormat="MMMM DD, YYYY hh:mm a"
                                                            fieldLabel="End Date"
                                                            name="./endDate"
                                                            jcr:primaryType="nt:unstructured"
                                                            renderReadOnly="{Boolean}true"
                                                            sling:resourceType="granite/ui/components/foundation/form/datepicker"
                                                            type="datetime" />

                                                </items>
                                            </col1>
                                            <col2
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container"
                                                    class="cq-dialog-dropdown-showhide-col2" >
                                                <items jcr:primaryType="nt:unstructured">
                                                    <storeId
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/common/tagspicker"
                                                            rootPath="/etc/tags/vans/stores"
                                                            fieldLabel="Select Stores"
                                                            mode="contains"
                                                            multiple="{Boolean}false"
                                                            name="./stores"
                                                            renderReadOnly="{Boolean}true"/>
                                                    <catalogId
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/common/tagspicker"
                                                            rootPath="/etc/tags/vans/catalogs"
                                                            fieldLabel="Select Catalog ID"
                                                            mode="contains"
                                                            multiple="{Boolean}false"
                                                            name="./stores"
                                                            renderReadOnly="{Boolean}true"/>
                                                    <materialType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/dropdown"
                                                            class="cq-dialog-dropdown-showhide-material"
                                                            fieldLabel="Material Type *"
                                                            name="./materialType"
                                                            renderReadOnly="{Boolean}true"
                                                            required="{Boolean}true">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <fabric
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Fabric"
                                                                    value="fabric"/>
                                                            <rubber
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Rubber"
                                                                    value="rubber"/>
                                                            <metal
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Metal"
                                                                    value="metal"/>
                                                        </items>
                                                    </materialType>
                                                    <materialGroup
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/dropdown"
                                                            class="cq-dialog-dropdown-showhide-mat-group"
                                                            fieldLabel="Material Group *"
                                                            name="./materialGroup"
                                                            renderReadOnly="{Boolean}true"
                                                            required="{Boolean}true">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <canvas
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Canvas"
                                                                    value="canvas"/>
                                                            <denim
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Denim"
                                                                    value="denim"/>
                                                            <leather
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Leather"
                                                                    value="leather"/>
                                                            <suede
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Suede"
                                                                    value="suede"/>
                                                        </items>
                                                    </materialGroup>
                                                    <hexValue
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            class="cq-dialog-dropdown-showhide-hexvalue"
                                                            name="./hexValue"
                                                            fieldLabel="Hex Value *"
                                                            renderReadOnly="{Boolean}true"/>
                                                </items>
                                            </col2>
                                        </items>
                                    </column-set>
                                </items>
                            </basic>
                            <assets
                                    jcr:primaryType="nt:unstructured"
                                    class="cq-dialog-dropdown-showhide-assets"
                                    jcr:title="Assets"
                                    sling:resourceType="granite/ui/components/foundation/section">
                                <items jcr:primaryType="nt:unstructured">
                                    <!--<testImage
                                            jcr:primaryType="nt:unstructured"
                                            title="Swatch Node"
                                            name="./mainImage"
                                            sling:resourceType="vans/components/imageupload"/>-->
                                    <testImage
                                            jcr:primaryType="nt:unstructured"
                                            title="Swatch Node"
                                            name="./mainImage"
                                            sling:resourceType="vans/components/templateUpload"/>
                                   <!-- <testImage1
                                            jcr:primaryType="nt:unstructured"
                                            title="Swatch Node"
                                            name="./mainImage1"
                                            sling:resourceType="vans/components/templateUpload"/>-->
                                    <!--<swatchThumbnailImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="vans/components/imageupload"
                                            autoStart="{Boolean}false"
                                            class="cq-droptarget"
                                            fieldLabel="Swatch Thumbnail"
                                            fileNameParameter="./swatchThumbnail"
                                            fileReferenceParameter="./swatchThumbnailRef"
                                            mimeTypes="[image]"
                                            multiple="{Boolean}false"
                                            name="./swatchThumbnailImage"
                                            title="Upload Swatch Image"
                                            uploadUrl="/content/geometrixx/en"
                                            useHTML5="{Boolean}true"/>-->
                                   <!-- <imagepaths
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/multifield"
                                            class="full-width"
                                            fieldDescription="Click '+' to add Image Path"
                                            fieldLabel="Technical Drawing Images"
                                            renderReadOnly="{Boolean}true">
                                        <field
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                name="./otherInfo/technicalDrawing/drawingImages"
                                                renderReadOnly="{Boolean}true"
                                                rootPath="/content/dam"/>
                                    </imagepaths>-->
                                    />
                                </items>
                            </assets>
                        </items>
                    </tabs>
                </items>
            </content>
        </cq:dialog>
    </jcr:content>
</jcr:root>
