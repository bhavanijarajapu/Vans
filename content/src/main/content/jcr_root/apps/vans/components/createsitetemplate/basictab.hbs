<div>
    <div class="coral-FixedColumn foundation-layout-util-vmargin">
        <div class="coral-FixedColumn-column">
            <div class="coral-Form-fieldwrapper">
                <label class="coral-Form-fieldlabel">{{i18n "Community Site Template Name"}}</label>
                <input class="coral-Form-field coral-Textfield" type="text" name="templateName" value="{{name}}" aria-required="true">
            </div>
            <div class="coral-Form-fieldwrapper">
                <label class="coral-Form-fieldlabel">{{i18n "Community Site Template Description"}}</label>
                <textarea class="coral-Form-field resizable-none coral-Textfield coral-Textfield--multiline" name="description" rows="5" aria-required="true">{{description}}</textarea>
            </div>
            <div class="coral-Form-fieldwrapper">
                  <span class="coral-Switch">
                    <input class="coral-Switch-input" name="enabled" type="checkbox">
                    <span class="coral-Switch-offLabel">{{i18n "Disabled"}}</span><span class="coral-Switch-onLabel">{{i18n "Enabled"}}</span>
                  </span>
            </div>
        </div>
    </div>
</div>